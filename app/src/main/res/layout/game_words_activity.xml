<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".GameWordActivity">


    <ImageView
        android:id="@+id/topLogo"
        android:layout_width="245px"
        android:layout_height="104px"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="50px"
        android:layout_marginTop="55px"
        android:src="@drawable/top_logo" />

    <ImageView
        android:id="@+id/progBack"
        android:layout_width="298dp"
        android:layout_height="86dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-30dp"
        android:layout_toStartOf="@+id/prevConst"
        android:src="@drawable/purple2" />

    <ImageView
        android:id="@+id/BackButton"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:onClick="backToMenu"
        android:src="@drawable/ic_highlight_off_black_24dp" />

    <ImageView
        android:id="@+id/progress"
        android:layout_width="172dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/stopButton"
        android:layout_marginBottom="11dp"
        android:contentDescription="TODO"
        android:src="@color/yellow" />

    <ImageView
        android:id="@+id/progFrame"
        android:layout_width="wrap_content"
        android:layout_height="208px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/progress_bar_alpha" />

    <ImageView
        android:id="@+id/pause"
        android:layout_width="47dp"
        android:layout_height="68dp"
        android:layout_alignEnd="@+id/topLogo"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-3dp"
        android:clickable="true"
        android:src="@drawable/ic_pause_circle_outline_black_24dp" />

    <ImageView
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/progress"
        android:layout_alignParentStart="true"
        android:src="@drawable/divider" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="900px"
        android:layout_height="113dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="126dp"
        android:src="@drawable/menu_word" />

    <TextView
        android:id="@+id/showWord"
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="133dp"
        android:fontFamily="@font/alef_bold"
        android:gravity="center_vertical|center"
        android:text="T"
        android:textColor="@color/purple3"
        android:textColorLink="@color/purple3"
        android:textSize="60sp" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="214dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="218dp" />

    <ImageView
        android:id="@+id/readWord"
        android:layout_width="250px"
        android:layout_height="250px"
        android:layout_below="@+id/imageView5"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:src="@drawable/ic_play_circle_filled_black_24dp" />

    <ImageView
        android:id="@+id/success"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/fail"
        android:layout_toEndOf="@+id/readWord"
        android:clickable="true"
        android:src="@drawable/ic_check_black_24dp" />

    <ImageView
        android:id="@+id/fail"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="118dp"
        android:layout_marginStart="43dp"
        android:clickable="true"
        android:src="@drawable/ic_close_black_24dp" />

</RelativeLayout>